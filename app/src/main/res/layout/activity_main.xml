<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<ImageView
    android:id="@+id/iv_splash_screen_logo"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:src="@drawable/splash_logo2"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="100dp"
    />

    <TextView
        android:id="@+id/tv_splash_screen_app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text="@string/qr_code_generator"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_below="@id/iv_splash_screen_logo"
        android:textStyle="bold"
        android:textSize="22sp" />

    <ProgressBar
        android:id="@+id/pb_splash_screen_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_splash_screen_app_title"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"/>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/dmd_splash_screen_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"/>

<TextView
    android:id="@+id/tv_splash_screen_creator_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/reverzu"
    android:fontFamily="@font/montserrat"
    android:textAlignment="center"
    android:layout_marginHorizontal="20dp"
    android:layout_alignParentBottom="true"
    android:textStyle="normal"
    android:layout_marginBottom="60dp"/>
</RelativeLayout>